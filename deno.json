{
  "name": "@zeero-systems/commons",
  "version": "0.9.14",
  "license": "GPL-3.0",
  "exports": "./mod.ts",
  "publish": {
    "include": [
      "LICENSE", 
      "mod.ts",
      "README.md", 
      "src/**/*.ts"
    ],
    "exclude": ["!dist"]
  },
  "tasks": {
    "dev": "deno run --watch index.ts"
  },
  "imports": {
    "-/": "./",
    "~/": "./src/",
    "@std/bdd": "jsr:@std/testing@1.0.15/bdd",
    "@std/mock": "jsr:@std/testing@1.0.15/mock",
    "@std/assert": "jsr:@std/assert@^1.0.14",
    "@std/expect": "jsr:@std/expect@1.0.17"
  },
  "fmt": {
    "files": {
      "include": [
        "mod.ts",
        "src/",
        "test/"
      ]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 120,
      "indentWidth": 2,
      "singleQuote": true,
      "proseWrap": "preserve"
    }
  },
  "lint": {
    "files": {
      "include": ["mod.ts", "src/**/*.ts", "test/**/*.ts"]
    },
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-explicit-any"]
    }
  }
}
