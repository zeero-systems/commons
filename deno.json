{
  "name": "@zxxxro/commons",
  "version": "0.8.5",
  "license": "GPL-3.0",
  "exports": "./mod.ts",
  "tasks": {
    "dev": "deno run --watch index.ts"
  },
  "imports": {
    "-/": "./",
    "~/": "./src/",
    "@std/bdd": "jsr:@std/testing/bdd",
    "@std/assert": "jsr:@std/assert@1",
    "@std/expect": "jsr:@std/expect"
  },
  "fmt": {
    "files": {
      "include": [
        "index.ts",
        "mod.ts",
        "src/",
        "test/"
      ]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 120,
      "indentWidth": 2,
      "singleQuote": true,
      "proseWrap": "preserve"
    }
  },
  "lint": {
    "files": {
      "include": ["index.ts", "mod.ts", "src/**/*.ts", "test/**/*.ts"]
    },
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-explicit-any"]
    }
  }
}
