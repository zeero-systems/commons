{
	"tasks": {
		"dev": "deno run --watch main.ts"
	},
	"imports": {
		"-/": "./",
		"~/": "./src/",
		"@std/assert": "jsr:@std/assert@1",
		"@std/bdd": "jsr:@std/testing/bdd",
		"@std/expect": "jsr:@std/expect"
	},
	"fmt": {
		"files": {
			"include": [
				"src/",
				"test/",
				"test-mock/"
			]
		},
		"options": {
			"useTabs": true,
			"lineWidth": 140,
			"indentWidth": 2,
			"singleQuote": true,
			"proseWrap": "preserve"
		}
	},
	"lint": {
		"files": {
			"include": ["src/**/*.ts", "test/**/*.ts", "test-mock/**/*.ts"]
		},
		"rules": {
			"tags": ["recommended"],
			"exclude": ["no-explicit-any"]
		}
	}
}
